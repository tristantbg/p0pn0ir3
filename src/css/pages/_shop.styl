#shop
	// hideselect()
	span(1)
	height 100vh
	position relative
	background $primary
	transition transform 500ms $kinetic
	overflow-y hidden
	& > [data-scroll]
		position relative
		width 100vw
		overflow hidden
	& > .inner-scroll
		height 100%
		display table
	.product-image
		height 100vh
		display table-cell
		padding 0
		margin 0
		// padding-top 1.5rem
		overflow hidden
		transition transform 500ms $kinetic
		img
			height 100%
		video
			object-fit cover
	.product-infos
		span(1)
		width calc(100% - 5px)
		position absolute
		top 100%
		left 0
		color $secondary
		background $primary
		height 50vh
		transition transform 500ms $kinetic
		.inner-scroll
			padding $padding 20% ($padding*3)
	.product
		display table-cell
		position relative
		[event-target=product-panel]
			cursor n-resize !important
		&:not(:last-child)
			.product-image
				padding-right 5px
		&.opened
			[event-target=product-panel]
				cursor s-resize !important
			.product-image
				transform translateY(-50vh) translateZ(0)
			.product-infos
				transform translateY(-50vh) translateZ(0)
			.panel-open
				display none
		&:not(.opened)
			.panel-close
				display none

body.product-opened
	#shop
		.product:not(.opened)
			[event-target=product-panel]
				cursor url('../../images/close-b.png') 8 8, not-allowed !important

.panel-close, .panel-open
	align(horizontal)
	text-transform uppercase
	color $primary
	mix-blend-mode difference
	position absolute
	bottom 0
	padding $padding

.buy
	display flex
	flex-direction column
	align-items center
	margin-bottom ($padding*3)
	.price
		margin-bottom ($padding/2)
		&:empty
			display none

.shopify-buy__btn
	display flex
	flex-direction column
	align-items center
	margin ($padding*3) 0

.buy-button, .shopify-buy__btn
	cursor pointer
	width 4.2rem
	height 4.2rem
	background $secondary
	color $primary
	// color #009dff !important
	border 1px solid $secondary
	border-radius 100%
	display flex
	justify-content center
	align-items center
	transition color 150ms ease, background 150ms ease
	&:hover
		background $primary
		color $secondary

.product-infos
	span(1/2)
	height 100%
	padding-right ($padding/2)
	line-height $lineheight
	height calc(100% - 2rem)
	position relative
	overflow hidden
	.inner-scroll
		width 100%
		float left
	.product-title
		margin-bottom ($padding*3)
	.product-description
		margin-bottom ($padding*3)
	.left, .right
		span(1/2)
		& > *:not(:last-child)
			margin-bottom $padding
	.left
		padding-right ($padding/2)
	.right
		padding-left ($padding/2)
	.product-tracklist
		.table
			width 100%
			tr
				display flex
	.product-links
		.table
			.table-row
				.table-cell:last-child
					width 100%
		& > div
			&:not(:last-child)
				margin-bottom $padding
			div:first-child
				span(1/4)
				padding-right $padding
			div:last-child
				span(3/4)

.shopify-buy__product__price
	margin-top $padding

.shopify-buy__option-select
	.shopify-buy__option-select__label
		span(1)
	.shopify-buy__option-select-wrapper
		position relative
		margin-top $padding
		.shopify-buy__option-select__select
			display inline-block
			background none
			padding-right 2em
			border 1px solid alpha($secondary, 0.3)
			font-family inherit
			font-size inherit
			// -webkit-appearance none
			// -moz-appearance none
			border-radius 0
			margin-top 0.2em
		.shopify-buy__select-icon
			display none
			position absolute
			pointer-events none
			top 0
			right 0
			height 100%

.shopify-buy-frame--toggle
	transition transform 500ms $kinetic
	z-index 10 !important
	transform none !important
	top initial !important
	bottom 0
	background $secondary
	color $primary
	cursor pointer
	.shopify-buy__cart-toggle
		padding $padding

.shopify-buy__cart-toggle
	display flex
	flex-direction row-reverse
	.shopify-buy__cart-toggle__title
		margin-right 1em
		text-transform uppercase

.shopify-buy__btn-wrapper
	display inline-block

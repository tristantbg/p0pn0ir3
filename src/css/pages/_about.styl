#page-content[page-type=about]
	position relative
	padding $padding
	+above($md + 1)
		height calc(100vh - (45vmin - (1.6rem + 2px)))
	+below($md)
		padding-bottom 13.4rem

#about-image
	span(1/3)
	+above($md + 1)
		padding-right $padding
		height 100%
	+below($md)
		span(1/2)
		margin-bottom $padding
		padding-right $padding
	+below($sm)
		stack()
	#about-image-mobile
		+above($md + 1)
			display none
	#about-image-desktop
		width 100%
		height 100%
		.responsive-image, img
			width 100%
			height 100%
			img
				object-fit cover
				width 100%
				height 100%
		+below($md)
			display none

#about-cv
	span(1/3)
	+above($md + 1)
		height 100%
		move(1/3, $col-or-span: span)
	+below($md)
		span(1/2)
		margin-bottom $padding
	+below($sm)
		stack()
	.infos--display
		height calc(100% - 0.6rem)
		overflow-y scroll
		padding-bottom 0.9em
	.infos--display::-webkit-scrollbar
		display none
	.row
		small()
		display flex
		&> *
			flex 1 1 50%
			padding .5em 0
		&:not(:last-child) > *
			border-bottom 1px solid
		&:first-child > *
			padding-top 0
	.infos--level-2
		.row
			&:first-child > *
				border-top 1px solid
				padding .5em 0

#about-text
	span(1/3)
	+below($md)
		span(1/2)
	+below($sm)
		stack()
	+above($md + 1)
		height 100%
		move(-1/3, $col-or-span: span)
		padding-right $padding
	.infos--display
		height calc(100% - 0.6rem)
		overflow-y scroll
		padding-bottom 0.9em
	.infos--display::-webkit-scrollbar
		display none

#about-credits
	margin-top $padding
	.row
		small()
		display flex
		&> *
			flex 1 1 50%
			padding .5em 0
		&:not(:last-child) > *
			border-bottom 1px solid
		&:first-child > *
			padding-top 0
	.infos--level-2
		.row
			&:first-child > *
				border-top 1px solid
				padding .5em 0



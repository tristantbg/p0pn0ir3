[page-type=default],
[page-type=about]
	background $secondary
	color $primary
	#page-content
		padding-top ($padding*2)
	#page-text
		span(2/6)
		padding 0 $padding
		+below($md)
			span(1/2)
		+below($sm)
			stack()

[event-target]
	cursor pointer

[data-scroll]
	overflow hidden

#artists-preview
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 5
	pointer-events none
	.artist-preview
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		visibility hidden
		.responsive-image
			width 100%
			height 100%
			img
				width 100%
				height 100%
				object-fit cover
				font-family 'object-fit: cover'

.table
	width 100%
.table-row
	// display flex
	.table-cell
		vertical-align top
		&:not(:last-child)
			padding-right $padding
		&:nth-child(2),
		&:nth-child(3):not(:last-child)
			flex 1

.iScrollVerticalScrollbar
	top 0 !important
	bottom 0 !important
	width 5px !important
	.iScrollIndicator
		background $secondary !important
		border-radius 0 !important
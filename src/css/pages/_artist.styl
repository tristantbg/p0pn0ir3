#page-content[page-type=artist]
	+below($md)
		span(1)
		height calc(100vh - 4rem)
		min-height calc(100vh - 4rem)

#artist-medias
	hideselect()
	span(1)
	position relative
	background $primary
	transition transform 500ms $kinetic
	+above($md + 1)
		height 100vh
	&[data-scroll]
		position relative
		width 100vw
		overflow hidden
		+below($md)
			span(1)
			height 100%
			overflow-y scroll
			overflow-scrolling touch
			position initial
		& > .inner-scroll
			+below($md)
				span(1)
			+above($md + 1)
				height 100%
				display table
	.artist-image
		position relative
		padding 0
		margin 0
		// padding-top 1.5rem
		+above($md + 1)
			height 100vh
			overflow hidden
			display table-cell
		+below($md)
			span(1)
			height auto
		.embed
			position absolute
			top 0
			z-index 1
			height 100%
			width 100%
			.embed__thumb>img
				opacity 1
				pointer-events none
				min-width 50px
				max-width 50px
		& > img
			cursor url('../../images/arrow-top.png') 8 8, n-resize !important
			+below($md)
				width 100%
				display block
			+above($md + 1)
				height 100%
				&.lazy, & + .embed
					transition transform 800ms ease, opacity 400ms ease
					transform translateX(100px) translateZ(0)
					&.lazyloaded
						transform none
						&+ .embed
							transform none
		video
			+above($md + 1)
				object-fit cover
			+below($md)
				width 100%
				height auto
		&:not(:last-child)
			+below($md)
				margin-bottom 4px
			+above($md + 1)
				padding-right 4px
				.embed
					width calc(100% - 4px)

#infos-btn
	position absolute
	bottom 0
	left 0
	padding $padding
	mix-blend-mode difference
	color $primary
	z-index 10
	+below($md)
		display none

#infos-btn-mobile
	position fixed
	bottom 0
	left 0
	padding 0.6em $padding
	color $primary
	background $secondary
	width 100%
	z-index 10
	+above($md + 1)
		display none

#player
	line-height $line-height
	position absolute
	bottom 0
	right 0
	padding $padding
	mix-blend-mode difference
	color $primary
	text-align right
	z-index 10
	transition transform 500ms $kinetic
	+below($md)
		bottom 2rem
		right initial
		left 0
		text-align left
		padding 0.6em $padding
		width 100%
		background $secondary
		mix-blend-mode normal
		text-align left

body:not(.player-playing)
	#player
		visibility hidden

#artist-panel
	span(1)
	overflow hidden
	color $secondary
	background $primary
	height 50vh
	position fixed
	left 0
	top 100%
	transition transform 500ms $kinetic
	+below($md)
		height calc(100vh - 2rem)
	&[data-scrollmobile]
		overflow hidden
		& > .inner-scroll
			float left

#panel-close
	position absolute
	bottom 0
	left 0
	padding $padding
	+below($md)
		display none

#artist-infos
	span(1/2)
	height 100%
	line-height $line-height
	position relative
	overflow hidden
	+above($md + 1)
		height calc(50vh - 3rem)
		padding-right ($padding/2)
	+below($md)
		stack()
	& > .inner-scroll
		padding-left $padding
		padding-top $padding
		padding-bottom $padding
		width 100%
		float left
		+below($md)
			padding-right $padding
	#artist-title
		margin-bottom $padding
	#artist-description
		span(2/3)
		+below($md)
			stack()
			margin-bottom $padding
	#artist-links
		span(1/3)
		+below($md)
			stack()
			margin-bottom $padding
	#artist-description
		+above($md + 1)
			padding-right ($padding*2)
			// text-align justify
	#artist-links
		& > div
			&:not(:last-child)
				margin-bottom $padding
			div:first-child
				span(1/3)
				padding-right $padding
			div:last-child
				span(2/3)
				a
					display block
					float left
					clear both

#artist-releases
	span(1/2)
	height 100%
	line-height $line-height
	padding-left ($padding/2)
	overflow hidden
	+above($md + 1)
		width 50vw
		.inner-scroll
			float left
			display flex
			padding-right $padding
	+below($md)
		stack()
		padding 0 $padding 10rem
	.release
		span(1)
		padding-top $padding
		padding-bottom $padding
		height 100%
		+above($md + 1)
			width 'calc(50vw - %s)' % ($padding*12)
			margin-right ($padding*6)
		.responsive-image, .release-infos
			span(1/2)
			+below($md)
				stack()
		.responsive-image
			+above($md + 1)
				padding-right ($padding/2)
				height "calc(50vh - %s)" % ($padding*4)
				img
					height 100%
					object-fit contain
					object-position top left
			+below($md)
				margin-bottom $padding
		.release-infos
			+above($md + 1)
				padding-left ($padding)
	.tracklist
		margin-top $padding
		.track
			cursor pointer
			width 100%
			display inline-flex
			flex-wrap wrap
			.amplitude-duration-minutes:not(:empty)::after
				content ':'
		.track > div
			&:first-child
				flex-grow 1
			&:not(:last-child)
				margin-right 1em
			&:last-child
				&::after
					content 'PLAY'
		.track.amplitude-playing > div
			&:last-child
				&::after
					content 'PAUSE'
	.buy
		padding-top $padding
		// border-top 1px solid

[page-type=artist]
	.shopify-buy__option-select
		margin $padding 0
	.shopify-buy__btn
		cursor pointer
		border 0
		padding 0
		font-size inherit
		font-family inherit
		letter-spacing inherit
		margin 0
		border-radius 0

body.infos-panel
	#artist-medias
		transform translateY(-50vh) translateZ(0)
		+below($md)
			transform translateY(calc(-100vh + 2rem)) translateZ(0)
		.artist-image > img
			cursor url('../../images/arrow-bottom.png') 8 8, s-resize !important
	#artist-panel
		transform translateY(-50vh) translateZ(0)
		+below($md)
			transform translateY(calc(-100vh + 2rem)) translateZ(0)
	#infos-btn-mobile
		color $secondary
		&::before
			content 'Close'
			color $primary

body,html
	width 100%
	background $primary

*
	box-sizing border-box

video::-webkit-media-controls
	display none

video::-webkit-media-controls-play-button {}

video::-webkit-media-controls-volume-slider {}

video::-webkit-media-controls-mute-button {}

video::-webkit-media-controls-timeline {}

video::-webkit-media-controls-current-time-display {}

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

.lazy
	transition opacity 300ms ease
	opacity 0

.lazy.lazyloaded, .lazy.flickity-lazyloaded
	opacity 1

.responsive-image
	hideselect()
	position relative
	overflow hidden
	img
		position absolute
		top 0
		left 0

#main, #container, #page-content
	span(1)

cross()
	&::before, &::after
		content ''
		position absolute
		height 1.1em
		width 1px
		background currentColor
		top 0.25em
		right 0.8em
	&::before
		transform rotate(-45deg)
	&::after
		transform rotate(45deg)

plus()
	&::before, &::after
		content ''
		position absolute
		height 0.9em
		width 1px
		background currentColor
		top 0.3em
		right 0.8em
	&::after
		transform rotate(90deg)

minus()
	&::after
		content ''
		position absolute
		height 0.9em
		width 1px
		background currentColor
		top 0.3em
		right 0.8em
	&::after
		transform rotate(90deg)

body.is-loading
	cursor wait
	pointer-events none

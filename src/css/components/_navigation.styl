#menu
	hideselect()
	display flex
	justify-content space-between
	position absolute
	left 0
	width 100%
	background $primary
	transition transform 300ms ease
	box-shadow 0 -1px 0 0 $secondary, 0 1px 0 0 $secondary
	z-index 10
	&.visible
		z-index 30
		transition transform 300ms ease, z-index 500ms ease
	+below($sm)
		display block

[data-menu=bottom]
	#menu
		bottom 0
		&.visible
			box-shadow 0 -1px 0 0 $secondary, 0 1px 0 0 $secondary, 0 -2px 0 0 $primary
			transform translateY(calc(100% + 1px)) translateZ(0)

[data-menu=top]
	#menu
		top 0
		&.visible
			box-shadow 0 -1px 0 0 $secondary, 0 1px 0 0 $secondary, 0 2px 0 0 $primary
			transform translateY(calc(-100% - 1px)) translateZ(0)

#primary-nav
	display inline-flex
	padding 0 ($padding)
	overflow hidden
	+below($sm)
		width 100%
		padding 0 $padding
	& > *
		padding .3em 0
		padding-right .6em
		&:first-child
			+above($sm + 1)
				// padding-left $padding
		&.active
			position relative
			border-right 1px solid
			padding-right 1.9em
			cross()
			&:not(:first-child)
				border-left 1px solid
				padding-left .6em
			&+ .active
				border-left none
			&+ a
				padding-left .6em

#secondary-nav
	display inline-flex
	flex-wrap wrap
	padding 0 ($padding)
	overflow hidden
	+below($sm)
		padding 0 $padding
		width 100%
		border-top 1px solid
	& > *
		margin-bottom 0
		padding .3em 0
		&:not(:last-child)
			margin-right 1em
	svg
		display block
		height 0.9rem
		width 0.9rem

a.language
	padding .3em 0 .3em .6em !important
	// border-left 1px solid
	+below($sm)
		position absolute
		top 0
		right $padding
		width auto


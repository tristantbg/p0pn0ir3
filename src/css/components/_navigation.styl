#menu
	hideselect()
	display flex
	justify-content space-between
	position fixed
	left 0
	width 100%
	background $secondary
	color $primary
	z-index 10
	&.visible
		visibility visible
	+below($sm)
		display block

#primary-nav
	display inline-flex
	padding 0 ($padding)
	overflow hidden
	+below($sm)
		width 100%
		padding 0 $padding
	& > *
		padding .3em 0
		padding-right 1em
		&.active
			position relative
	& > li:not(:hover) > ul
		display none

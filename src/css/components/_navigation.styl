$burgerTransition = 200ms

#burger
  position relative
  width 1rem
  height 1rem
  transform rotate(0deg)
  transition all $burgerTransition
  cursor pointer
  margin 0.6em $padding
  +above($sm + 1)
    display none
  span
    display block
    position absolute
    height 1px
    width 100%
    background $primary
    opacity 1
    padding 0
    left 0
    transform rotate(0deg)
    transition all $burgerTransition ease
    z-index 210
  span:nth-child(1)
    top calc(50% - 7px)
    transition-delay $burgerTransition
  span:nth-child(2), span:nth-child(3)
    transition-delay 0s
    top calc(50% - 1px)
  span:nth-child(4)
    transition-delay $burgerTransition
    top calc(50% + 5px)

#menu
  hideselect()
  display flex
  justify-content space-between
  width 100%
  background $secondary
  color $primary
  z-index 10
  transition width 500ms $kinetic
  +above($sm + 1)
    height 2em
    #mobile-toggle-header
      display none
  &.visible
    visibility visible
  +below($sm)
    display block
    &.opened
      height 100vh
      #burger
        span:nth-child(1), span:nth-child(4)
          transition-delay 0s
          opacity 0
          top 50%
        span:nth-child(2)
          transition-delay $burgerTransition
          transform rotate(45deg)
        span:nth-child(3)
          transition-delay($burgerTransition)
          transform rotate(-45deg)
    &:not(.opened)
      #primary-nav, #secondary-nav
        display none
      [event-target="menu"]
        &::after
          // content 'Menu'
    [event-target="menu"]
      &::after
        // content 'Close menu'
    [event-target="about-panel"]
      display none
    #mobile-toggle-header
      display block
      text-transform uppercase
      display flex
      justify-content space-between
      [event-target="about-panel"]
        display block
      & > *:not([event-target="menu"])
        padding 0.6em $padding

#primary-nav
  & > * a, & > * span
    display block
    padding 0.6em 0
    +below($sm)
      padding 0.3em 0

#secondary-nav
  & > *
    position relative
    padding 0.6em 0
    +below($sm)
      padding 0.3em 0

#primary-nav, #secondary-nav
  text-transform uppercase
  padding 0 ($padding)
  +above($sm + 1)
    display inline-flex
    height 2em
  & > *
    position relative
    &:not(:last-child)
      padding-right 1em
  +below($sm)
    & > li > ul
      padding-left 1em
  +above($sm + 1)
    & > li > ul
      display inline-flex
      position absolute
      background $secondary
      width 100vw
      top 1.8em
      left 0
      height 2em
      overflow hidden
      transition height 200ms ease
      transition-delay 0ms
      &::after
        content ''
        position fixed
        z-index -1
        background $secondary
        height 4rem
        transition height 200ms ease
        transition-delay 0ms
        width 100%
        left 0
        top 0
      & > li
        position relative
        z-index 1
        a
          display block
          padding 0.6em 0
        &:not(:last-child) a
          padding-right 1.8em
    & > li:not(.hover) > ul
      height 0
      &::after
        height 2rem

#primary-nav
  & > li > a
    transition color 150ms ease
  & > li > a.active,
  & > li > span.active
    color alpha($primary, 0.6)
  & > li > a:hover
    +above($md + 1)
      color alpha($primary, 0.6)
      // color #009dff
      // text-decoration line-through
      // font-weight bolder
  & > li > ul a
    transition color 150ms ease
  & > li > ul a.active,
  & > li > ul span.active
    color alpha($primary, 0.6)
  & > li > ul a:hover
    +above($md + 1)
      color alpha($primary, 0.6)
      // color #ffec4b
      // text-decoration line-through
      // font-weight bolder

#secondary-nav
  a, [event-target]
    transition color 150ms ease
  a.active,
  a:hover,
  [event-target]:hover
    +above($md + 1)
      color alpha($primary, 0.6)

#languages
  text-transform uppercase
  +below($sm)
    padding 0.3em 0 0.6em
    margin-top 0.5em
  a:not(:last-child)
    &::after
      content ' / '
      color alpha($primary, 1)
